= form_for form do |f|

  %h2 Details

  %dl
    = f.label :name, "Title:"
    = f.text_field :name

  %dl
    = f.label :description, "Description:", class: 'textarea_label'
    = f.text_area :description, rows: 3

  %dl{ style: 'margin-top: 7px' }
    = f.label :location, "Location:"
    = f.text_field :location

  %br
  %h2 Date and Time

  %dl
    = f.label :date, "Date:"
    = f.date_select :date, order: [:month, :day, :year], default: 5.days.from_now

  %dl
    = f.label :starts_at, "Starts:"
    = f.time_select :starts_at, ampm: true, minute_step: 15, default: Time.now.change(hour: 19)

  %dl
    = f.label :ends_at, "Ends:"
    = f.time_select :ends_at, ampm: true, minute_step: 15, default: Time.now.change(hour: 21)

  %br
  %dl
    = label_tag nil
    - if form.persisted?
      = f.submit "Save".html_safe, class: 'blue'
      = f.submit "Save & Continue".html_safe, class: 'green'
    - else
      = f.submit "Continue &raquo;".html_safe, class: 'green'

:javascript
  new LiveValidation('form_name').add( Validate.Presence, { failureMessage: "required" } );
